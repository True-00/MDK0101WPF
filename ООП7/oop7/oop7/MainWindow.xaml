<Window x:Class="oop7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:oop7"
        xmlns:elements="clr-namespace:oop7.Elements"
        mc:Ignorable="d"
        Title="Интерфейсы и множественное наследование" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель -->
        <Border Grid.Column="0" BorderBrush="#FFE0E0E0" BorderThickness="0 0 1 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#FF2C3E50">
                    <TextBlock Text="Пользователи" FontSize="18" FontWeight="Bold" 
                               Foreground="White" Margin="15"/>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="UsersPanel" Margin="10"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Правая панель -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#FFF8F9FA" BorderBrush="#FFE0E0E0" BorderThickness="0 0 0 1">
                <TextBlock x:Name="ChatTitle" Text="Выберите пользователя" 
                           FontSize="16" FontWeight="Bold" Margin="15"/>

            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                <StackPanel x:Name="MessagesPanel"/>
            </ScrollViewer>

            <Border Grid.Row="2" Background="#FFF8F9FA" BorderBrush="#FFE0E0E0" BorderThickness="1 0 0 0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="MessageTextBox" Grid.Row="0"
                             MinHeight="60" MaxHeight="120"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,10" IsEnabled="False"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="AddImageButton" Content="📷 Добавить изображение" 
                                Click="AddImageButton_Click" Margin="0,0,10,0" IsEnabled="False"/>
                        <Button x:Name="SendButton" Content="Отправить" 
                                Click="SendButton_Click" Width="100" Height="35"
                                Background="#FF3498DB" Foreground="White"
                                FontWeight="Bold" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>