<UserControl x:Class="oop7.Elements.Messages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:oop7.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Border BorderBrush="#FFE0E0E0" BorderThickness="0 0 0 1" Padding="10">
        <StackPanel>
            <!-- Заголовок сообщения -->
            <TextBlock x:Name="MessageHeader" 
                       FontSize="12" 
                       Foreground="Gray"
                       Margin="0,0,0,5"/>

            <!-- Текст сообщения -->
            <TextBlock x:Name="MessageText" 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,5"/>

            <!-- Изображение (если есть) -->
            <Image x:Name="MessageImage" 
                   MaxWidth="200" 
                   MaxHeight="150"
                   Stretch="Uniform"
                   Visibility="Collapsed"
                   Margin="0,5,0,0"/>

            <!-- Кнопки редактирования/удаления -->
            <StackPanel x:Name="EditPanel" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Visibility="Collapsed">
                <Button x:Name="EditButton" 
                        Content="✏️" 
                        ToolTip="Редактировать"
                        Click="EditButton_Click"
                        Width="30" Height="30"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        FontSize="14"
                        Margin="0,0,5,0"/>
                <Button x:Name="DeleteButton" 
                        Content="🗑️" 
                        ToolTip="Удалить"
                        Click="DeleteButton_Click"
                        Width="30" Height="30"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        FontSize="14"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
