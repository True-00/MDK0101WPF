<UserControl x:Class="oop7.Elements.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:oop7.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300"
             MouseDown="UserControl_MouseDown"
             Cursor="Hand">
    <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Background="White">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25" 
                    Background="#FF3498DB" Margin="0,0,15,0">
                <Image x:Name="UserImage" Width="40" Height="40" 
                       Source="{Binding Img}" Stretch="UniformToFill"/>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="UserNameText" 
                           Text="{Binding FullName}" 
                           FontSize="14" FontWeight="Bold"/>
                <TextBlock x:Name="UserPhoneText" 
                           Text="{Binding Phone}" 
                           FontSize="12" Foreground="Gray"/>
            </StackPanel>

            <Border Grid.Column="1" HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Width="10" Height="10" CornerRadius="5"
                    Background="#FF3498DB" 
                    x:Name="SelectionIndicator"
                    Visibility="Collapsed"/>
        </Grid>
    </Border>
</UserControl>
