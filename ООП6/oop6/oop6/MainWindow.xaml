<Window x:Class="oop6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:oop6"
        mc:Ignorable="d"
        Title="Speaking Humans" Height="560" Width="650" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFF5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF2C3E50" Padding="20">
            <StackPanel>
                <TextBlock Text="Speaking Humans" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Click on a person to hear them speak" 
                           FontSize="14" 
                           Foreground="#FFBDC3C7"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <StackPanel Grid.Row="1" Margin="30">

            <!-- Текущая фраза -->
            <Border BorderBrush="#FF3498DB" 
                    BorderThickness="2" 
                    CornerRadius="10" 
                    Background="White"
                    Padding="20"
                    Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="Current phrase:" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="#FF2C3E50"/>
                    <Label x:Name="CurrentPhraseLabel" 
                           Content="No phrase yet" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="#FF2980B9"
                           HorizontalAlignment="Center"
                           MinWidth="300"
                           MinHeight="50"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Background="#FFF0F8FF"/>
                </StackPanel>
            </Border>

            <!-- Спикеры -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">

                <!-- Русский -->
                <Border Width="250" 
                        Height="180" 
                        Background="White" 
                        BorderBrush="#FFDDDDDD" 
                        BorderThickness="2"
                        CornerRadius="12"
                        MouseDown="RussianBorder_MouseDown"
                        Cursor="Hand"
                        Margin="0,0,30,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.2"/>
                    </Border.Effect>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image x:Name="RussianImage" 
                               Width="80" 
                               Height="80" 
                               Margin="0,0,0,10"/>
                        <TextBlock Text="Русский" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Александр" 
                                   FontSize="14" 
                                   Foreground="#FF666666"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="Нажмите, чтобы говорить" 
                                   FontSize="11" 
                                   Foreground="#FF888888"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Англичанин (используем american.png) -->
                <Border Width="250" 
                        Height="180" 
                        Background="White" 
                        BorderBrush="#FFDDDDDD" 
                        BorderThickness="2"
                        CornerRadius="12"
                        MouseDown="EnglishBorder_MouseDown"
                        Cursor="Hand">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.2"/>
                    </Border.Effect>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image x:Name="EnglishImage" 
                               Width="80" 
                               Height="80" 
                               Margin="0,0,0,10"/>
                        <TextBlock Text="Англичанин" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="John" 
                                   FontSize="14" 
                                   Foreground="#FF666666"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="Click to speak" 
                                   FontSize="11" 
                                   Foreground="#FF888888"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>

            <!-- Информация -->
            <StackPanel Margin="0,40,0,0" HorizontalAlignment="Center">
                <TextBlock Text="Файлы в Voices:" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="hello.mp3 • HowAreYou.mp3 • avatar.mp3" 
                           FontSize="11" 
                           Foreground="#FF666666"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Файлы в Images:" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
                <TextBlock Text="russian.png • american.png" 
                           FontSize="11" 
                           Foreground="#FF666666"
                           HorizontalAlignment="Center"/>
            </StackPanel>

        </StackPanel>

        <!-- Подвал -->
        <Border Grid.Row="2" Background="#FFECF0F1" Padding="10">
            <TextBlock Text="OOP6 - Абстрактные классы в C# | Колледж" 
                       FontSize="12" 
                       Foreground="#FF7F8C8D"
                       HorizontalAlignment="Center"/>
        </Border>

    </Grid>
</Window>
