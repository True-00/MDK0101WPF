<UserControl x:Class="oop5.Elements.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:oop5.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="370" d:DesignWidth="800">
    <Grid>
        <Border Margin="20" Width="200" CornerRadius="20" Background="#ff5a5a5a">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Image Margin="20" Width="160" Source="\Images\product.jpg"/>
                <StackPanel Grid.Row="1" Margin="16, 20, 16, 10">
                    <Label x:Name="tbName" Content="Наименование" Foreground="#fff"
                            HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Label x:Name="tbPrice" Content="Цена: " HorizontalAlignment="Left" Foreground="#fff"/>
                    <Label x:Name="tbCcaracteristice" Content="Характеристика: " 
                            HorizontalAlignment="Left" Foreground="#fff"/>
                </StackPanel>
            </Grid>
            <Border.Effect>
                <DropShadowEffect BlurRadius="3"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
